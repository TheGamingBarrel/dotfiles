menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = reboot

menu-2-0 = power off
menu-2-0-exec = poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/cmus]
type = custom/script
exec = sh ~/.config/polybar/music.sh
exec-if = pgrep -x cmus
interval = 1

format-prefix = "ÔÄÅ "
format-padding = 2
;format-prefix-foreground = ${colors.purple}
click-left = cmus-remote --pause
click-right = cmus-remote -n
label = %output:0:60:...%

[module/keyboard]
type = custom/script
exec = sh ~/..config/polybar/info-hackspeed.sh


[module/spotify]
type = custom/script
exec = sh ~/.config/polybar/spotify.sh
exec-if = pgrep -x spotify
interval = 1

format-prefix = "ÔÜº "
format-padding = 2
;format-prefix-foreground = ${colors.purple}
click-left = playerctl play-pause
click-right = playerctl next
label = %output:0:60:...%

[module/light]
type = custom/script
exec = light -G
interval = 1

[module/weather]
