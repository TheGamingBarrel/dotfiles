#
# wm independent hotkeys
#
#
# music control

XF86AudioPlay
	playerctl play-pause

XF86AudioStop
	playerctl stop

XF86AudioPrev
	playerctl previous

XF86AudioNext
	playerctl next

XF86AudioMute
	amixer -q set Master toggle

XF86AudioLowerVolume
	amixer -q set Master 10%-

XF86AudioRaiseVolume
	amixer -q set Master 10%+

XF86MonBrightnessDown
	xbacklight -dec 10

XF86MonBrightnessUp
	xbacklight -inc 10

alt + XF86MonBrightnessDown
	xbacklight -set 0

alt + XF86MonBrightnessUp 
	xbacklight -set 100
# program hotkeys

Hirigana_Katakana
	urxvt

alt + q
	qutebrowser

alt + m
	urxvt -e ncmpcpp

alt + t 
	telegram-desktop

alt + f 
	firefox-nightly

alt + g
	docker run -e DISPLAY=$DISPLAY -v /tmp/.X11-unix:/tmp/.X11-unix jess/gimp

super + alt + space
	clipmenu

alt + d 
	discord

alt + z
	zathura

alt + shift + t
	docker run -e DISPLAY=$DISPLAY -v /tmp/.X11-unix:/tmp/.X11-unix jess/tor-browser

alt + p 
	pavucontrol

alt + v 
	virt-manager

alt + c 
	chromium
alt + l
	betterlockscreen -l

alt + Return 
	tdrop -amy -800 -x -1500 -w -750 -h -500 urxvt  

alt + @space
	passmenu

# terminal emulator
super + Return
	urxvt -e tmux

super + e
	urxvt -e ranger

# program launcher
super + @space
	rofi -show drun

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# make bspwm reload its configuration files

super + alt + escape 
	sh ~/.config/bspwm/bspwmrc

# show song lyrics

crtl + super + l
	urxvt -name floating -e less ~/.lyrics/"$(mpc | grep -m1 "")".txt

# bspwm hotkeys
#

# change borders
super + shift + b
	bspc config border_width 2 && bspc config window_gap 12

super + shift + n
	bspc config border_width 0 && bspc config window_gap 0 

super + shift + z
	bspc config border_width 8 && bspc config window_gap 35

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local
# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

@super + minus
	bspc desktop -f 10

@super + equal
	bspc desktop -f 11

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# take a screenshot
Print 
	bash ~/scripts/screen.sh

control + Print
	bash ~/scripts/partscreen.sh

# Shutdown script

super + pause
	bash $HOME/shutdown.sh

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# change wallpaper and refresh qutebrowser

alt + w
	wal -i ~/Wallpapers && python .config/qutebrowser/scripts/qutebrowser_reload.py && ~/wal-discord/wal-discord -u -t
 

